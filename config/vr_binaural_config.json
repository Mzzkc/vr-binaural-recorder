{
  "audio": {
    "sampleRate": 48000,
    "bufferSize": 256,
    "inputDevice": "default",
    "outputDevice": "default",
    "inputChannels": 1,
    "outputChannels": 2,
    "useASIO": false,
    "useWASAPI": true,
    "enableExclusiveMode": false
  },
  "hrtf": {
    "datasetConfigPath": "./hrtf_datasets_config.json",
    "activeDataset": "mit_kemar_compact",
    "filterLength": 512,
    "enableInterpolation": true,
    "convolutionMethod": "overlap_add",
    "enableNearFieldCompensation": true,
    "distanceAttenuationModel": "inverse_square",
    "loadingStrategy": "on_demand",
    "cachePreloadedMeasurements": true
  },
  "vr": {
    "trackingRate": 90,
    "enablePrediction": true,
    "predictionTime": 0.011,
    "smoothingFactor": 0.95,
    "calibrationOffset": {
      "x": 0.0,
      "y": 0.0,
      "z": 0.0
    },
    "overlay": {
      "enabled": true,
      "width": 2.0,
      "position": {
        "x": 0.0,
        "y": 1.5,
        "z": -1.0
      },
      "autoHide": true,
      "autoHideDelay": 5000
    }
  },
  "performance": {
    "audioThreadPriority": "high",
    "vrThreadPriority": "normal",
    "enableSIMD": true,
    "enableFastMath": true,
    "memoryPoolSize": 8388608,
    "enableProfiling": false
  },
  "logging": {
    "level": "info",
    "path": "./logs",
    "enableAsync": true,
    "rotationSize": 10485760,
    "maxFiles": 5,
    "enableConsole": true,
    "enableFile": true
  },
  "debug": {
    "enableMetrics": true,
    "enableValidation": true,
    "enableVerboseAudio": false,
    "enableVerboseVR": false,
    "enableProfiling": false
  }
}