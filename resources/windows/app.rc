// Application manifest
1 RT_MANIFEST "app.manifest"

// Menu resources
IDR_MAIN_MENU MENU
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "&New Recording\tCtrl+N",      ID_FILE_NEW
        MENUITEM "&Open...\tCtrl+O",           ID_FILE_OPEN
        MENUITEM "&Save\tCtrl+S",              ID_FILE_SAVE
        MENUITEM "Save &As...\tCtrl+Shift+S",  ID_FILE_SAVE_AS
        MENUITEM SEPARATOR
        MENUITEM "E&xit\tAlt+F4",              ID_FILE_EXIT
    END
    POPUP "&Audio"
    BEGIN
        MENUITEM "&Start Recording\tSpace",     ID_AUDIO_START
        MENUITEM "S&top Recording\tEsc",       ID_AUDIO_STOP
        MENUITEM "&Pause Recording\tP",        ID_AUDIO_PAUSE
        MENUITEM SEPARATOR
        MENUITEM "&Audio Settings...",         ID_AUDIO_SETTINGS
        MENUITEM "&Device Configuration...",   ID_AUDIO_DEVICES
    END
    POPUP "&VR"
    BEGIN
        MENUITEM "&Connect Headset",           ID_VR_CONNECT
        MENUITEM "&Disconnect Headset",        ID_VR_DISCONNECT
        MENUITEM "&Tracking Settings...",      ID_VR_TRACKING
        MENUITEM "&Spatial Audio Settings...", ID_VR_SPATIAL
    END
    POPUP "&View"
    BEGIN
        MENUITEM "&Device Panel",              ID_VIEW_DEVICES
        MENUITEM "&Spatial Audio Panel",       ID_VIEW_SPATIAL
        MENUITEM "&Recording Panel",           ID_VIEW_RECORDING
        MENUITEM "&Monitoring Panel",          ID_VIEW_MONITORING
        MENUITEM SEPARATOR
        MENUITEM "&Full Screen\tF11",          ID_VIEW_FULLSCREEN
    END
    POPUP "&Tools"
    BEGIN
        MENUITEM "&Settings...\tF2",           ID_TOOLS_SETTINGS
        MENUITEM "&Troubleshooting...",        ID_TOOLS_TROUBLESHOOT
        MENUITEM "&Log Viewer...",             ID_TOOLS_LOGS
        MENUITEM SEPARATOR
        MENUITEM "&Check for Updates...",      ID_TOOLS_UPDATE
    END
    POPUP "&Help"
    BEGIN
        MENUITEM "&User Guide\tF1",            ID_HELP_GUIDE
        MENUITEM "&Keyboard Shortcuts",        ID_HELP_SHORTCUTS
        MENUITEM "&Hardware Requirements",     ID_HELP_HARDWARE
        MENUITEM SEPARATOR
        MENUITEM "&Report Issue...",           ID_HELP_REPORT
        MENUITEM "&About VR Binaural Recorder...", ID_HELP_ABOUT
    END
END

// Accelerator table
IDR_MAIN_ACCEL ACCELERATORS
BEGIN
    "N",            ID_FILE_NEW,            VIRTKEY, CONTROL
    "O",            ID_FILE_OPEN,           VIRTKEY, CONTROL
    "S",            ID_FILE_SAVE,           VIRTKEY, CONTROL
    "S",            ID_FILE_SAVE_AS,        VIRTKEY, CONTROL, SHIFT
    VK_F4,          ID_FILE_EXIT,           VIRTKEY, ALT
    VK_SPACE,       ID_AUDIO_START,         VIRTKEY
    VK_ESCAPE,      ID_AUDIO_STOP,          VIRTKEY
    "P",            ID_AUDIO_PAUSE,         VIRTKEY
    VK_F11,         ID_VIEW_FULLSCREEN,     VIRTKEY
    VK_F2,          ID_TOOLS_SETTINGS,      VIRTKEY
    VK_F1,          ID_HELP_GUIDE,          VIRTKEY
END

